<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:drools="http://drools.org/schema/drools-spring"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://drools.org/schema/drools-spring http://drools.org/schema/drools-spring.xsd">


    <drools:kbase id="productBase">
        <drools:resources>
            <drools:resource type="DRL" source="classpath:rules/product.drl" />
            <drools:resource type="DRL" source="classpath:rules/product1.drl" />
        </drools:resources>
    </drools:kbase>

    <drools:ksession id="productSession" type="stateless" kbase="productBase" />

    <bean id="simpleService" class="com.foo.service.drools.SimpleService">
        <property name="productSession" ref="productSession" />
        <property name="workingMemoryListener" ref="workingMemoryListener" />
        <property name="agendaEventListener" ref="agendaEventListener"/>
    </bean>

    <bean id="workingMemoryListener" class="com.foo.service.drools.listener.MyWorkingMemoryEventListener"/>

    <bean id="agendaEventListener" class="com.foo.service.drools.listener.MyAgendaEventListener"/>



</beans>