<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foo.dao.user.AddressDao">

	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[
			id,province,city,town
		]]>
	</sql>

    <!-- deal 查询列来源表-->
    <sql id="QUERY_TABLE">
    	<![CDATA[ address ]]>
    </sql>
    <!-- deal 查询列来源表-->
	<sql id="QUERY_FROM_TABLE">
		<![CDATA[FROM ]]> <include refid="QUERY_TABLE"/>
    </sql>

	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
			<if test="id != null "><![CDATA[AND id = #{id}]]></if>
		</where>
	</sql>

	<!-- 通过条件查询数据集合 -->
	<select id="selectEntryById" parameterType="Integer" resultType="address">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		where id = #{id}
	</select>

	<!-- 判断表是否为空 -->
	<select id="selectCount" resultType="Integer">
		<![CDATA[SELECT count(id)]]>
		<include refid="QUERY_FROM_TABLE"/>
	</select>

</mapper>